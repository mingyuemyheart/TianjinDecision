<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tianjin_day" >

    <RelativeLayout
        android:id="@+id/reTitle"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/tvBlank"
            android:layout_width="fill_parent"
            android:layout_height="40dp" />

        <RelativeLayout
            android:id="@+id/reContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBlank" >

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_menu" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/level_3" />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_share"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#90ffffff"
            android:textSize="@dimen/level_5" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reTitle"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:visibility="invisible" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/reFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tvQuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner_right_black"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/level_5" />

                    <TextView
                        android:id="@+id/tvWarning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvQuality"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner_right_black"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/level_5"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvRoute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner_left_black"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:text="沿途天气"
                        android:textColor="@color/white"
                        android:textSize="@dimen/level_5" />

                    <TextView
                        android:id="@+id/tvMonitor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tvRoute"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner_left_black"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:text="全国实况监测"
                        android:textColor="@color/white"
                        android:textSize="@dimen/level_5" />

                    <ImageView
                        android:id="@+id/ivWaitWind"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tvMonitor"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/iv_wait_wind"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/reBottom"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_marginTop="0dp" >

                        <ImageView
                            android:id="@+id/ivEvent"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_above="@+id/llForecast"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/llArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/reFact"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="invisible" >

                            <TextView
                                android:id="@+id/tvArea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="津南区"
                                android:textColor="@color/white"
                                android:textSize="@dimen/level_3" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:src="@drawable/iv_front" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/reFact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/llPressure"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp" >

                            <LinearLayout
                                android:id="@+id/llPhe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical" >

                                <ImageView
                                    android:id="@+id/ivPhe"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:gravity="bottom" >

                                    <TextView
                                        android:id="@+id/tvTemp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:text="25"
                                        android:textColor="@color/white"
                                        android:textSize="60dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:text="℃"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/level_3" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/llPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/llForecast"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical" >

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/iv_pressure" />

                                <TextView
                                    android:id="@+id/tvPressre"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="气压 1015hPa"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/level_4" />

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="@dimen/level_5"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@color/white" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/iv_humdity" />

                                <TextView
                                    android:id="@+id/tvHumidity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="湿度 89%"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/level_4" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center_vertical" >

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/iv_wind2" />

                                <TextView
                                    android:id="@+id/tvWind"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="东北风 1级"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/level_4" />

                                <TextView
                                    android:layout_width="1dp"
                                    android:layout_height="@dimen/level_5"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@color/white" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/iv_visible2" />

                                <TextView
                                    android:id="@+id/tvVisible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="能见度 50m"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/level_4" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llForecast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/reMinute"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:background="#60000000"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/tvDay1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="今天"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/level_3" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:gravity="center_vertical" >

                                        <TextView
                                            android:id="@+id/tvHighTemp1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/level_4" />

                                        <TextView
                                            android:id="@+id/tvLowTemp1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/level_4" />
                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/ivPhe1"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_centerVertical="true" />

                                    <TextView
                                        android:id="@+id/tvPhe1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/level_4" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_marginLeft="1dp"
                                android:layout_weight="1"
                                android:background="#60000000"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingBottom="5dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp" >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/tvDay2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="明天"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/level_3" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:gravity="center_vertical" >

                                        <TextView
                                            android:id="@+id/tvHighTemp2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/level_4" />

                                        <TextView
                                            android:id="@+id/tvLowTemp2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/level_4" />
                                    </LinearLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/ivPhe2"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_centerVertical="true" />

                                    <TextView
                                        android:id="@+id/tvPhe2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/level_4" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/reMinute"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_above="@+id/minuteDivider"
                            android:background="#60000000"
                            android:gravity="center_vertical"
                            android:paddingBottom="5dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp" >

                            <TextView
                                android:id="@+id/tvMinetePrompt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/minute_fall"
                                android:textColor="@color/white"
                                android:textSize="@dimen/level_4" />

                            <TextView
                                android:id="@+id/tvTime2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/ivClose"
                                android:textColor="#90ffffff"
                                android:textSize="@dimen/level_5" />

                            <ImageView
                                android:id="@+id/ivClose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/iv_open" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/minuteDivider"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:background="#30ffffff" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llHide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reFirst"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/reSecond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#30000000"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/tvRain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/corner_left_right_black"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:text="距离下一场雨还有8小时，先洗洗车去"
                            android:textColor="@color/white"
                            android:textSize="@dimen/level_5"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/llContainer3"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_below="@+id/tvRain"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/reThird"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#30000000"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/tvFifteen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/weekly_forecast"
                            android:textColor="@color/white"
                            android:textSize="@dimen/level_4" />

                        <TextView
                            android:id="@+id/tvLine"
                            android:layout_width="0.5dp"
                            android:layout_height="@dimen/level_5"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/tvFifteen"
                            android:background="@color/white" />

                        <TextView
                            android:id="@+id/tvHourly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tvLine"
                            android:text="@string/hourly_forecast"
                            android:textColor="#90ffffff"
                            android:textSize="@dimen/level_4" />

                        <TextView
                            android:id="@+id/tvTime3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="#90ffffff"
                            android:textSize="@dimen/level_5" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#30ffffff" />

                    <com.hf.tianjin.view.MyHorizontalScrollView
                        android:id="@+id/hScrollView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:visibility="gone" >

                        <LinearLayout
                            android:id="@+id/llContainer1"
                            android:layout_width="wrap_content"
                            android:layout_height="300dp"
                            android:background="#30000000"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </com.hf.tianjin.view.MyHorizontalScrollView>

                    <HorizontalScrollView
                        android:id="@+id/hScrollView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none" >

                        <LinearLayout
                            android:id="@+id/llContainer2"
                            android:layout_width="wrap_content"
                            android:layout_height="400dp"
                            android:background="#30000000"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </HorizontalScrollView>

                    <RelativeLayout
                        android:id="@+id/reFourth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#30000000"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/index"
                            android:textColor="@color/white"
                            android:textSize="@dimen/level_4" />

                        <TextView
                            android:id="@+id/tvTime4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="#90ffffff"
                            android:textSize="@dimen/level_5" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#30ffffff" />

                    <com.hf.tianjin.view.MainViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:background="#30000000"
                        android:padding="10dp" />

                    <LinearLayout
                        android:id="@+id/viewGroup"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#30000000"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" />

                    <RelativeLayout
                        android:id="@+id/reFifth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#30000000"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/near_weather"
                            android:textColor="@color/white"
                            android:textSize="@dimen/level_4" />

                        <TextView
                            android:id="@+id/tvTime5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="#90ffffff"
                            android:textSize="@dimen/level_5" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#30ffffff"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/reNear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#30000000"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="gone" >

                        <GridView
                            android:id="@+id/aroundGridView"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:cacheColorHint="@color/transparent"
                            android:fadingEdge="none"
                            android:gravity="center"
                            android:horizontalSpacing="5dip"
                            android:listSelector="@color/transparent"
                            android:numColumns="2"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="5dip" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="@android:style/Widget.DeviceDefault.ProgressBar"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:indeterminateDrawable="@anim/circle_progressbar" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>