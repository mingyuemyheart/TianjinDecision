<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|right" >

            <TextView
                android:id="@+id/tvRefuseCheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="@dimen/level_5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/selector_detail"
            android:paddingBottom="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="5dip" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="@dimen/level_3"
                    android:layout_height="@dimen/level_3"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/iv_left_location" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivLocation"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cityName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textColor="@color/text_color4"
                        android:textSize="@dimen/level_4" />

                    <TextView
                        android:id="@+id/cityName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color1"
                        android:textSize="@dimen/level_5" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/ivPhe"
                    android:textColor="@color/text_color4"
                    android:textSize="@dimen/level_4" />

                <ImageView
                    android:id="@+id/ivPhe"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>